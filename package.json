{
  "name": "todo-app-monorepo",
  "version": "1.0.0",
  "description": "Full-Stack Todo Web Application - Monorepo",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:mcp\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && python main.py",
    "dev:mcp": "cd mcp_server && python -m uvicorn server:app --reload --port 8001",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "npm run build:frontend",
    "build:frontend": "cd frontend && npm run build",
    "start:servers": "concurrently \"npm run dev:backend\" \"npm run dev:mcp\""
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
